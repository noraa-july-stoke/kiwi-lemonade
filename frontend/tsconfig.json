{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "lib": [
            "dom",
            "esnext"
        ],
        "jsx": "react",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}
